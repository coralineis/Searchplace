<div class="container">
  <% @places.each do |place| %>
    <%= link_to place_path(place.id) do %>
      <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= place.name %></h5>
        <div class="row">
          <% if @tags.present? %>
            <% @tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
        <h6 class="card-subtitle mb-2 text-muted">by <%= place.user.name %></h6>
        <%= image_tag place.image.url %>
        <p class="card-text"><%= place.introduction %></p>
        <p class="card-text">所要時間　<%= place.time %>時間</p>
      </div>
    <% end %>
  <% end %>
</div>
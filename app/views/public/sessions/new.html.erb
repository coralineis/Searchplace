<div class="container">
  <h3 class="mt-5">Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス", class: "mt-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: "mt-3" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-dark" %>
    </div>
  <% end %>

  <%= link_to "ゲストとしてログインする", users_guest_sign_in_path, method: :post, class: "btn btn-dark mr-2 mt-3" %>


  <div class="row text-info">
    <%= link_to "新規会員登録はこちら", new_user_registration_path, class: "m-3 text-reset" %>
  </div>

</div>
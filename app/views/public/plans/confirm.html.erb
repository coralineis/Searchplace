<div class="container">
  <div class="row justify-content-center">
    <h5>＜内容を確認してください＞</h5>
  </div>

  <div class="row justify-content-center my-3">
    <div class="bg-light">
        <h5><%= @plan.name %></h5>
    </div>
    　by <%= @plan.user.name %>
    </div>
  </div>

  <div class="row">
    <% if @tags.present? %>
      <div class="border border-dark border-4 rounded-2">
        <% @tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="card mx-auto" style="width: 18rem;">
    <%= image_tag @plan.image.url %>
    <div class="card-body">
      <h5 class="card-title"><%= @plan.place_name %>  <%= @plan.time %></h5>
      <p class="card-text"><%= @plan.introduction %></p>
    </div>
  </div>

  <%= form_with model: @plan, url: plans_path, method: :post do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :place_name %>
    <%= f.hidden_field :image %>
    <%= f.hidden_field :image_cache %>
    <%= f.hidden_field :time %>
    <%= f.hidden_field :introduction %>
    <%= f.hidden_field :tag_list %>
    <div class="form-group row justify-content-center mt-3">
      <div>
        <%= f.submit "投稿する", class: "btn btn-success mr-2" %>
        <%= f.submit "修正する", name: :back, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>


</div>
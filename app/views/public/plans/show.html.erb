<div class="container">
  <div class="row justify-content-center mb-3">
    <h5><%= @plan.name %></h5>
    <h6 class="ml-3">by <%= @plan.user.name %></h6>
  </div>

  <div class="row">
    <% if @tags.present? %>
      <div class="border border-dark border-4 rounded-2">
        <% @tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="card mx-auto" style="width: 18rem;">
    <%= image_tag @plan.image.url %>
    <div class="card-body">
      <h5 class="card-title">
        <%= @plan.time %>:00～<br>
        <%= @plan.place_name %>
      </h5>
      <p class="card-text"><%= @plan.introduction %></p>
    </div>
  </div>


  <div class="row justify-content-center mt-3">
    <% if @plan.liked_by?(current_user) %>
      <%= button_to plan_likes_path(@plan), method: :delete, class: "btn btn-warning text-dark" do %>
        ♥ <%= @plan.likes.count %> お気に入りを解除
      <% end %>
    <% else %>
      <%= button_to plan_likes_path(@plan), method: :post, class: "btn btn-warning text-dark" do %>
        ♡ <%= @plan.likes.count %> お気に入りに追加
      <% end %>
    <% end %>
  </div>
</div>
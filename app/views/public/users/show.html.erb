<div class="container">
  <div class="row justify-content-center">
    <h3>My Page</h3>
  </div>

  <div class="row">
    <div class="col">
      <ul>
        <li style="list-style: none;" class="font-weight-bold">ユーザー情報</li>
        <li style="list-style: none;" class="my-1"><%= @user.name %></li>
        <li style="list-style: none;" class="my-1"><%= @user.prefecture_i18n %>在住</li>
        <li style="list-style: none;" class="my-1"><%= link_to "編集する", edit_users_path(current_user), class: "btn btn-primary" %></li>
      </ul>
      <ul>
        <li style="list-style: none;" class="font-weight-bold my-1">投稿する</li>
        <li style="list-style: none;" class="my-1"><%= link_to "Plan", new_plan_path, class: "btn btn-info" %></li>
        <li style="list-style: none;" class="my-1"><%= link_to "Place", new_place_path, class: "btn btn-danger" %></li>
      </ul>
    </div>

    <div class="col">
      <p>お気に入り一覧</p>
      <% if @like_list.present? %>
        <% @like_list.each do |plan| %>
          <%= plan.name %>
          <%= plan.introduction %>
        <% end %>
      <% end %>
      <%= link_to "投稿一覧" %>
    </div>
  </div>
</div>
  <% plans.each do |plan| %>

    <div class="row">
      <% if tags.present? %>
        <div class="border border-dark border-4 rounded-2">
          <% tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="card mx-auto my-3" style="max-width: 500px;">
      <div class="card-body text-center">
        <h5 class="card-title"><%= plan.name %></h5>
        <h6 class="card-subtitle text-right mb-2">posted by <%= plan.user.name %></h6>
        <%= image_tag plan.image.url %>
        <p class="card-text mt-2">
          <%= plan.time %>:00～<br>
          <%= plan.place_name %><br>
          <%= plan.introduction %>
        </p>
        <%= link_to "編集する", edit_plan_path(plan.id), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <% places.each do |place| %>
    <div class="row justify-content-center">
      <% if tags.present? %>
        <% tags.each do |tag| %>
          # <%= tag.name %>
        <% end %>
      <% end %>
    </div>

    <div class="card mx-auto my-3" style="max-width: 500px;">
      <%= image_tag place.image.url %>
      <div class="card-body text-center">
        <p class="card-text">
          <% if place.tag_list.present? %>
            <% place.tag_list.each do |tag| %>
              #<%= tag %>
            <% end %>
          <% end %>
        </p>
        <h4 class="card-title"><%= place.name %></h4>
        <h6 class="card-subtitle text-right">posted by <%= place.user.name %></h6>
        <p class="card-text py-3">
          ≪ 所要時間 ≫　<%= place.time %>時間<br>
          <%= place.introduction %>
        </p>
        <%= link_to "編集する", edit_place_path(place.id), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>


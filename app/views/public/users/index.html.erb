<div class="container">
  <div class="row">
    <% @plans.each do |plan| %>
    <% end %>
  </div>
  <div class="row">
    <% @places.each do |place| %>
      <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= place.name %></h5>
        <div class="row">
          <% if @tags.present? %>
            <% @tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
        <h6 class="card-subtitle mb-2 text-muted">by <%= place.user.name %></h6>
        <%= image_tag attachment_url(place, :image, :fill, 100, 100, fallback: "logo2.png") %>
        <p class="card-text"><%= place.introduction %></p>
        <p class="card-text">所要時間　<%= place.time %>時間</p>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
<h3 class="mt-5">Sign Up</h3>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス", class: "mt-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :name, "ユーザーネーム", class: "mt-3" %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :prefecture, "居住地(任意)", class: "mt-3" %><br>
      <%= f.select :prefecture, User.prefectures_i18n.invert, :prompt => "--都道府県を選択してください--" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: "mt-3" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "mt-3" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-dark mt-3" %>
    </div>

    <div class="row text-info">
      <%= link_to "ログインする方はこちら", new_user_session_path, class: "m-3 text-reset " %>
    </div>

  <% end %>
</div>